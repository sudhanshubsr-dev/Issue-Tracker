<link rel="stylesheet" href="/css/home.css">

<main>
    <div class="container">
        <div class="row">
            <div class="col-2 col-md-2 ProjectColumn">
            <div id="ProjectButton">
                <span>Projects</span>
                <i class="fa-solid fa-arrow-right" style="color: #fff; padding-top: 5px;"></i>
            </div>
            <div id="ProjectCreateButton">
                <a href="/project/create" class="btn btn-primary projectcreate">Create Project</a>
            </div>
            </div>
            <div class="col-10 col-md-10 ProjectDisplay">
                <ul>
                    <% for (project of ProjectData){ %>
                        <li type="none">
                            <div class="card projectile">
                                <div class="card-body">
                                  <h5 class="card-title"><%=project.project_name  %></h5>
                                  <p class="card-text"><%= project.project_description %></p>
                                  <p class="card-text">Author: <%= project.project_author %></p>
                                  <a href="/project/detail/<%=project._id%>" class="btn btn-primary">View Project</a>
                                </div>
                            </div>
                        </li>
                    <% } %>
                    

                </ul>
            </div>
        </div>
    </div>
</main>
