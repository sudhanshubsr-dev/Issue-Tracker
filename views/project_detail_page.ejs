<% if (issues && issues.length > 0) { %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Labels</th>
                <th>Author</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% issues.forEach(function(issue) { %>
                <tr>
                    <td><%= issue.title %></td>
                    <td><%= issue.description %></td>
                    <td><%= issue.labels %></td>
                    <td><%= issue.author %></td>
                    <td><%= issue.createdAt.toLocaleString() %></td>
                    <td><%= issue.updatedAt.toLocaleString() %></td>
                    <td>
                        <a href="/project/<%= project.id %>/delete-issue/<%= issue.id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No issues found.</p>
<% } %>

<a href="/project/<%= project.id %>/new-issue" class="btn btn-primary">Create New Issue</a>
